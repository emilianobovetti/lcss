#!/bin/bash

self_path="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
test_path="$self_path/test"
test_file="$test_path/strings"
exe="$self_path/build/lcss"

mkdir -p "$test_path"
rm -f "$test_file"

for i in {0..126}; do
    ranstr -l 200 -r a-d >> "$test_file"
done

make

time (cat "$test_file" | "$exe")
